<%= form_with model: movie do |f| %>
  <div>
    <%= f.label :title, 'Título' %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :year, 'Ano' %>
    <%= f.number_field :year %>
  </div>
  <div>
    <%= f.label :plot, 'Sinopse' %>
    <%= f.text_area :plot %>
  </div>
  <div>
    <%= f.label :country, 'País de Origem' %>
    <%= f.text_field :country %>
  </div>
  <div>
    <%= f.label :duration, 'Duração' %>
    <%= f.number_field :duration %>
  </div>
  <div>
    <%= f.label :director_id, 'Diretor' %>
    <%= f.collection_select :director_id, Director.all, :id, :name %>
  </div>
  <div>
    <%= f.label :genre_id, 'Gênero' %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </div>
  <div>
    <%= f.submit 'Salvar' %>
  </div>
<% end %>